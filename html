<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Digital Library</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .book {
      border: 1px solid #ccc;
      padding: 10px;
      margin-bottom: 10px;
      display: flex;
      align-items: center;
    }
    .book img {
      max-width: 100px;
      margin-right: 10px;
    }
    .book-details {
      flex-grow: 1;
    }
    .title {
      font-weight: bold;
    }
    .author {
      font-style: italic;
    }
  </style>
</head>
<body>
  <div id="library"></div>

  <script>
    // Sample array of books, authors, and image URLs
    const libraryData = [
      { title: "To Kill a Mockingbird", author: "Harper Lee", imageUrl: "https://via.placeholder.com/100" },
      { title: "1984", author: "George Orwell", imageUrl: "https://via.placeholder.com/100" },
      { title: "The Great Gatsby", author: "F. Scott Fitzgerald", imageUrl: "https://via.placeholder.com/100" },
      { title: "Pride and Prejudice", author: "Jane Austen", imageUrl: "https://via.placeholder.com/100" },
      { title: "The Catcher in the Rye", author: "J.D. Salinger", imageUrl: "https://via.placeholder.com/100" }
    ];

    // Function to create HTML for each book
    function createBookElement(book) {
      const bookElement = document.createElement("div");
      bookElement.classList.add("book");
      bookElement.innerHTML = `
        <img src="${book.imageUrl}" alt="Book Cover">
        <div class="book-details">
          <div class="title">${book.title}</div>
          <div class="author">${book.author}</div>
        </div>
      `;
      return bookElement;
    }

    // Function to display the library
    function displayLibrary(library) {
      const libraryContainer = document.getElementById("library");
      libraryContainer.innerHTML = ""; // Clear existing content

      library.forEach(book => {
        const bookElement = createBookElement(book);
        libraryContainer.appendChild(bookElement);
      });
    }

    // Display the library when the page loads
    window.onload = function() {
      displayLibrary(libraryData);
    };
  </script>
</body>
</html>
